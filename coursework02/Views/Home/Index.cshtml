                    <li class="list-group-item">@Html.ActionLink("MemberType", "Index", "MemberCategories")</li>
                    <li class="list-group-item">@Html.ActionLink("Search", "Index", "search")</li>

                </ul>

            </div>
            <div class="col-md-6">
                <h2>Search Menu</h2>
                <ul class="list-group">

                    <li class="list-group-item">
                        <a href="@Url.Action("GetAlbumByArtist", "Search")">Album By Artist</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GetAlbumInActive", "Search")">Album InActive</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GEtAlbumOnShelves", "Search")">Album On Shelves</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GetAlbumsAll", "Search")">Album All</a>
                    </li>
