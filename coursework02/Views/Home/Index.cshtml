@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}

<div class="col-md-12">&nbsp;</div>
<div class="jumbotron">
    <h1>Welcome Back</h1>
    <p>Some Text Goes Here. Some Text Goes Here. Some Text Goes Here.</p>
    <div class="row">
        @if (Request.IsAuthenticated)
        {
            <div class="col-md-6">

                <h2>Main Menu</h2>

                <ul class="list-group">
                    <li class="list-group-item">@Html.ActionLink("Artists", "Index", "Artists")</li>
                    <li class="list-group-item">@Html.ActionLink("Producers", "Index", "Producers")</li>
                    <li class="list-group-item">@Html.ActionLink("Album", "Index", "Albums")</li>
                    <li class="list-group-item">@Html.ActionLink("Loan", "Index", "Loans")</li>
                    <li class="list-group-item">@Html.ActionLink("Loan Types", "Index", "LoanTypes")</li>
