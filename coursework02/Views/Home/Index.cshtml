                        <a href="@Url.Action("GetAYearOldAlbum", "Search")">Get Old Album</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GetByCopyNumber", "Search")">Album By Copy Number</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GetLoanAlbum", "Search")">Loan Albums</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GetLoansByMember", "Search")">Loans By Members</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GetMemberDetail", "Search")">Member Details</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("GetMemberInActive", "Search")">Member Inactive</a>
                    </li>
